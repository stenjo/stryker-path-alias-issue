{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
